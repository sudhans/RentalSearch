<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RangeSliderWithToolTipEnabled" parent="@style/Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/RangeSliderTooltipLabelStyle</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Slider</item>
    </style>

    <style name="RangeSliderTooltipLabelStyle" parent="Widget.MaterialComponents.Tooltip">
        <!-- background color of the Tooltip -->
        <item name="backgroundTint">@color/design_default_color_primary</item>
    </style>

    <style name="ThemeOverlay.Slider" parent="">
        <!-- color used by the text in the Tooltip -->
        <item name="colorOnPrimary">@color/white</item>
    </style>
</resources>